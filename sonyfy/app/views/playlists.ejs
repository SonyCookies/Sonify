<%- include('partials/start') %> <%- include('partials/header') %>

<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-white">Manage Playlists</h1>
    <button
      class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
      id="createPlaylistButton"
    >
      + Create Playlist
    </button>
  </div>

  <div class="bg-gray-800 p-4 rounded-lg">
    <% if (playlists && playlists.length > 0) { %> <%
    playlists.forEach(function(playlist) { %>
    <div class="flex justify-between items-center mb-4 p-4 bg-gray-700 rounded">
      <div>
        <h2 class="text-xl font-semibold text-white"><%= playlist.name %></h2>
        <p class="text-gray-400 text-sm">Songs: <%= playlist.songCount %></p>
      </div>
      <div class="flex space-x-2">
        <button
          class="bg-green-500 text-white px-3 py-1 rounded hover:bg-green-600 playPlaylistButton"
          data-playlist-id="<%= playlist.id %>"
        >
          <i class="fas fa-play"></i>
        </button>

        <button
          class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 viewPlaylistButton"
          data-playlist-id="<%= playlist.id %>"
          onclick="viewPlaylist(<%= playlist.id %>)">
          <i class="fas fa-eye"></i>
        </button>
      </div>
    </div>
    <% }); %> <% } else { %>
    <p class="text-gray-400">No playlists available.</p>
    <% } %>
  </div>

  <!-- Create Playlist Modal -->
  <div
    id="createPlaylistModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-gray-800 p-6 rounded-lg w-96">
      <h2 class="text-2xl text-white mb-4">Create New Playlist</h2>
      <form id="createPlaylistForm" action="/playlists/create" method="POST">
        <label
          for="playlistName"
          class="block text-gray-300 text-sm font-bold mb-2"
        >
          Playlist Name
        </label>
        <input
          type="text"
          id="playlistName"
          name="playlistName"
          class="w-full p-2 mb-4 bg-gray-700 text-white rounded"
          placeholder="Enter playlist name"
          required
        />
        <div class="flex justify-between">
          <button
            type="submit"
            class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          >
            Create
          </button>
          <button
            type="button"
            id="closeCreatePlaylistModalButton"
            class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
            onclick="toggleCreatePlaylistModal(false)"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div
    id="deleteConfirmationModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-gray-800 p-6 rounded-lg w-96">
      <h2 class="text-2xl text-white mb-4">Confirm Deletion</h2>
      <p class="text-gray-300 mb-4">
        Are you sure you want to delete this playlist?
      </p>
      <div class="flex justify-between">
        <button
          id="confirmDeletePlaylistButton"
          class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600"
        >
          Delete
        </button>
        <button
          id="cancelDeletePlaylistButton"
          class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
        >
          Cancel
        </button>
      </div>
    </div>
  </div>

  <!-- Success Modal -->
  <div
    id="successModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-gray-800 p-6 rounded-lg w-96">
      <h2 class="text-2xl text-green-500 mb-4">Success!</h2>
      <p class="text-white">Playlist created successfully!</p>
      <div class="flex justify-end mt-4">
        <button
          id="closeSuccessModalButton"
          class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          onclick="toggleSuccessModal(false)"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<script src="../../src/js/playlist.js"></script>

<%- include('partials/end') %>
