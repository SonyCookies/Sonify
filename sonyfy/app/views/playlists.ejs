<%- include('partials/start') %> <%- include('partials/header') %>

<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-white">Manage Playlists</h1>
    <button
      class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
      id="createPlaylistButton"
    >
      + Create Playlist
    </button>
  </div>

  <div class="bg-gray-800 p-4 rounded-lg playlists-container">
    <%- include('partials/playlist_list', { playlists: playlists }) %>
  </div>
</div>


  <div
    id="createPlaylistModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-gray-800 p-6 rounded-lg w-96">
      <h2 class="text-2xl text-white mb-4">Create New Playlist</h2>
      <form id="createPlaylistForm" action="/playlists/create" method="POST">
        <label
          for="playlistName"
          class="block text-gray-300 text-sm font-bold mb-2"
        >
          Playlist Name
        </label>
        <input
          type="text"
          id="playlistName"
          name="playlistName"
          class="w-full p-2 mb-4 bg-gray-700 text-white rounded"
          placeholder="Enter playlist name"
          required
        />
        <div class="flex justify-between">
          <button
            type="submit"
            class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          >
            Create
          </button>
          <button
            type="button"
            id="closeCreatePlaylistModalButton"
            class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
            onclick="toggleCreatePlaylistModal(false)"
          >
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
  <!-- Success Modal -->
  <div
    id="successModal"
    class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
  >
    <div class="bg-gray-800 p-6 rounded-lg w-96">
      <h2 class="text-2xl text-green-500 mb-4">Success!</h2>
      <p class="text-white">Playlist created successfully!</p>
      <div class="flex justify-end mt-4">
        <button
          id="closeSuccessModalButton"
          class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
          onclick="toggleSuccessModal(false)"
        >
          Close
        </button>
      </div>
    </div>
  </div>


  <!-- Delete Confirmation Modal -->
<div id="deleteConfirmationModal" class="fixed inset-0 hidden bg-black bg-opacity-50 flex items-center justify-center">
  <div class="bg-gray-800 rounded-lg shadow-lg p-6 max-w-md w-full">
    <h2 class="text-xl text-white mb-4">Confirm Deletion</h2>
    <p class="text-gray-300 mb-6">Are you sure you want to delete this playlist?</p>
    
    <div class="flex justify-end">
      <button
        id="cancelDeleteButton"
        class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600"
      >
        Cancel
      </button>
      <button
        id="confirmDeleteButton"
        class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 ml-2"
      >
        Delete
      </button>
    </div>
  </div>
</div>

<!-- Success/Error Modal (shared for both success and error) -->
<div id="feedbackModal" class="fixed inset-0 hidden bg-black bg-opacity-50 flex items-center justify-center">
  <div class="bg-gray-800 rounded-lg shadow-lg p-6 max-w-md w-full">
    <h2 id="feedbackTitle" class="text-xl text-white mb-4"></h2>
    <p id="feedbackMessage" class="text-gray-300 mb-6"></p>
    
    <div class="flex justify-end">
      <button
        id="closeFeedbackButton"
        class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
      >
        Close
      </button>
    </div>
  </div>
</div>


<script src="../../src/js/playlist.js"></script>
<script src="../../src/js/deletePlaylist.js"></script>

<%- include('partials/end') %>
