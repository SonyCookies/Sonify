<%- include('partials/start') %>
<%- include('partials/header') %>

<div class="container mx-auto p-6">
  <!-- Playlist Information -->
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
    <h1 class="text-3xl font-bold text-white mb-2"><%= playlist.name %></h1>
    <p class="text-gray-400 text-lg">Created on: <%= new Date(playlist.fcreated_at).toLocaleDateString() %></p>
  </div>

  <!-- Song List -->
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
    <h2 class="text-2xl font-medium text-white mb-4">Songs in "<i><%= playlist.name %></i>"</h2>
    <table id="songsTable" class="display w-full text-sm text-gray-300">
      <thead>
        <tr>
          <th class="py-2 px-4">Cover</th>
          <th class="py-2 px-4">Title</th>
          <th class="py-2 px-4">Artist</th>
          <th class="py-2 px-4">Album</th>
          <th class="py-2 px-4">Duration</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>

<!-- Include DataTables Config -->
<%- include('partials/dataTablesConfig') %>

<script>
  $(document).ready(function() {
    $('#songsTable').DataTable({
      responsive: true,
      searching: true,
      paging: true,
      info: true,
      order: [[1, 'asc']], // Sort by the second column (song title)
    });
  });
</script>

<%- include('partials/end') %>
